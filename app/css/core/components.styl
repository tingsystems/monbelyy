/***** Caption effect *****/
/*---------------*/
figure
  -webkit-backface-visibility hidden
  backface-visibility hidden
  position relative
  float left
  overflow hidden
  margin 10px 1%
  min-width 100%
  max-width 100%
  max-height 360px
  width 48%
  background pink
  text-align center
  cursor pointer

.bg-color-caption
  background-color rgba(0,0,0,0.2)
  position absolute
  width 100%
  height 100%
  top 0
figure.effect-sadie
  .divider
    border 1px solid #ffffff8c
    height 90%
    width 90%
    position absolute
    top 15px
    left 0
    right 0
    margin 0 auto
  .img-bg-caption
    background-size cover
    height 300px
    background-position center

figure.effect-sadie figcaption::before
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background: -moz-linear-gradient(top, rgba(237,68,109,0) 0%, rgba(237,68,109,1) 100%); /* FF3.6-15 */
  background: -webkit-linear-gradient(top, rgba(237,68,109,0) 0%,rgba(237,68,109,1) 100%); /* Chrome10-25,Safari5.1-6 */
  background: linear-gradient(to bottom, rgba(237,68,109,0) 0%,rgba(237,68,109,1) 100%); /* W3C, IE10+, FF16+, Chrome26+, Opera12+, Safari7+ */
  content ''
  opacity 0
  -webkit-transform translate3d(0,50%,0)
  transform translate3d(0,50%,0)

figure.effect-sadie h2
  text-shadow 0 2px 1px rgba(0,0,0,0.5)
  position absolute
  top 50%
  left 0
  width 100%
  color white
  -webkit-transition -webkit-transform 0.35s, color 0.35s
  transition transform 0.35s, color 0.35s
  -webkit-transform translate3d(0,-50%,0)
  transform translate3d(0,-50%,0)

figure.effect-sadie figcaption::before,
figure.effect-sadie p, figure.effect-sadie a
  -webkit-transition opacity 0.35s, -webkit-transform 0.35s
  transition opacity 0.35s, transform 0.35s

figure.effect-sadie p
  color white
  position absolute
  bottom 0
  left 0
  padding 48px 25px
  width 100%
  opacity 0
  -webkit-transform translate3d(0,10px,0)
  transform translate3d(0,10px,0)

figure.effect-sadie a
  color white !important
  position absolute
  bottom 0
  left 0
  right 0
  margin 20px 25px
  border 1px solid white
  border-radius 0
  opacity 0
  -webkit-transform translate3d(0,10px,0)
  transform translate3d(0,10px,0)

figure.effect-sadie:hover h2
  color #fff
  -webkit-transform translate3d(0,-50%,0) translate3d(0,-40px,0)
  transform translate3d(0,-50%,0) translate3d(0,-40px,0)

figure.effect-sadie:hover figcaption::before ,
figure.effect-sadie:hover p, figure.effect-sadie:hover a
  opacity 1
  -webkit-transform translate3d(0,0,0)
  transform translate3d(0,0,0)
