/* Buttons full color */
.btn-primary
  button(white, primary, 3px, 5px 10px, 1px solid primary)
  &:hover, &:focus
    background-color primary
    border 1px solid primary
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-info
  button(white, info, 3px, 5px 10px, 1px solid info)
  &:hover, &:focus
    background-color info
    border 1px solid info
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-success
  button(white, success, 3px, 5px 10px, 1px solid success)
  &:hover, &:focus
    background-color success
    border 1px solid success
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-warning
  button(white, warning, 3px, 5px 10px, 1px solid warning)
  &:hover, &:focus
    background-color warning
    border 1px solid warning
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-danger
  button(white, danger, 3px, 5px 10px, 1px solid danger)
  &:hover, &:focus
    background-color danger
    border 1px solid danger
    box-shadow 0 3px 10px rgba(0,0,0,0.3)
.btn-default
  button(fontClr, default, 3px, 5px 10px, 1px solid default)
  &:hover, &:focus
    background-color default
    border 1px solid default
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-dark
  button(white, dark, 3px, 5px 10px, 1px solid dark)
  &:hover, &:focus
    background-color dark
    border 1px solid dark
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

/* Buttons outline color */
.btn-outline-primary
  button(primary, transparent, 3px, 5px 10px, 1px solid primary)
  &:hover, &:focus
    background-color primary
    border 1px solid primary
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-outline-info
  button(info, transparent, 3px, 5px 10px, 1px solid info)
  &:hover, &:focus
    background-color info
    border 1px solid info
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-outline-success
  button(success, transparent, 3px, 5px 10px, 1px solid success)
  &:hover, &:focus
    background-color success
    border 1px solid success
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-outline-warning
  button(warning, transparent, 3px, 5px 10px, 1px solid warning)
  &:hover, &:focus
    background-color warning
    border 1px solid warning
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-outline-danger
  button(danger, transparent, 3px, 5px 10px, 1px solid danger)
  &:hover, &:focus
    background-color danger
    border 1px solid danger
    box-shadow 0 3px 10px rgba(0,0,0,0.3)
  &:disabled
    button(danger, transparent, 3px, 5px 10px, 1px solid danger)
    opacity 0.5
    cursor no-drop

.btn-outline-default
  button(fontClr, transparent, 3px, 5px 10px, 1px solid fontClr)
  &:hover, &:focus
    background-color default
    border 1px solid fontClr
    color fontClr
    box-shadow 0 3px 10px rgba(0,0,0,0.3)

.btn-outline-dark
  button(dark, transparent, 3px, 5px 10px, 1px solid dark)
  &:hover, &:focus
    background-color dark
    border 1px solid dark
    box-shadow 0 3px 10px rgba(0,0,0,0.3)


//buttons bordered
.bordered //add this class in your button to bordered
  border-radius 30px
.unbordered //add this class in your button to unbordered
  border-radius 0

/*------- Dropdown -------*/
.dropdown-menu
  top 38px

/*------- Boxes -------*/
.box
  box(15px, none, 1px solid #f5f5f5, 3px)

.box-simple
  @extend .box
  background-color white
  margin-bottom 15px
  transition(all 1s )
  a
    &:hover
      text-decoration none
    .box-title
      color fontClr !important
  .box-header
    .box-bg-img
      background-position center
      background-size cover
      height 200px
  .box-container
    text-align center
    margin-bottom 15px
    p
      height 50px
      padding 10px
  .box-footer
    text-align center
  &:hover
    box(15px, 0 4px 20px rgba(0,0,0,0.1), 1px solid #f5f5f5, 3px)

.box-default
  @extend .box
  background-color #f5f5f5

.box-bordered
  border-bottom 1px solid #ddd
  padding 15px
  a
    &:hover
      text-decoration none
  .box-header
    .img-box
      background-size cover
      background-repeat no-repeat
      background-position center
      height 300px
  .box-article
    color fontClr


