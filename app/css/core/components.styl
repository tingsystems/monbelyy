/* CAROUSEL FOR PAGES OR PRODUCTS */
.owl-theme-page
  .owl-nav [class*='owl-']
    background-color transparent
    font-size 36px
    &:hover
      background-color transparent
      color danger
  .slider-page
    height hSmallSlider
    background-position top
    background-size wSmallSlider
    background-repeat no-repeat
  .owl-nav
    position absolute
    top 50%
    left 0
    right 0
    .owl-prev
      left 25px
      position absolute
      padding 5px 20px
    .owl-next
      right 25px
      position absolute
      padding 5px 20px
  .owl-dots
    position absolute
    bottom 15px
    left 0
    right 0
    .owl-dot.active span,
    .owl-dot:hover span
      background-color white
      &:hover
        background-color white
    .owl-dot span
      background-color transparent
      border 1px solid white
      &:hover
        background-color white

/* WIDTH 100% CAROUSEL HOME */
.owl-theme-slider
  .owl-dots
    position absolute
    bottom 15px
    left 0
    right 0
    .owl-dot.active span,
    .owl-dot:hover span
      background-color white
      &:hover
        background-color white
    .owl-dot span
      background-color transparent
      border 1px solid white
      &:hover
        background-color white
  .owl-nav [class*='owl-']
    background-color rgba(0,0,0,0.6)
    font-size 28px
    border-radius 30px
    color white
    opacity 0.5
    &:hover
      background-color black
  .owl-nav
    position absolute
    top 50%
    left 0
    right 0
    .owl-prev
      left 35px
      position absolute
      padding 5px 20px
    .owl-next
      right 35px
      position absolute
      padding 5px 20px

.slider-box
  padding-top 0 !important
  padding-bottom 0
  .slider-img
    background-position top
    background-size wSlider
    background-repeat no-repeat
    height hSlider

/* --- STYLE TABS --- */

/* tab simple */
.tab-simple
  border 1px solid #ddd
  background white
  border-radius 5px
  box-shadow 0 6px 21px rgba(0,0,0,0.1)
  .tab-pane
    border none !important
    padding 15px
    background-color transparent
  .nav-item.active
    color danger
    background-color transparent
    border-bottom 1px solid danger
  .nav-tabs .nav-link.active
    color danger
  .nav-tabs .nav-link
    border-top none
    border-left none
    border-right none
    color fontClr
    &:hover, &:focus,.active
      border-color transparent
      border-top none
      border-left none
      border-right none
      color danger
      background-color transparent

/* --- WIDGETS  ---  */
.box-widget-default
  widget(transparent, 2px, 20px, none, none)

.box-widget-white
  background-color #f9f9f9
  border none
  border-radius 3px
  box-shadow 0 0 10px rgba(0,0,0,0.05)
  padding 15px
  .widget-title-first
    background transparent
    padding 10px 5px
    color #555 !important
    border-bottom 1px solid #eee
  ul
    li > a
      color #555555
      text-decoration none
      &:hover
        color #ff7300
.box-widget
  widget(white, 2px, 15px, 1px solid #ddd, none)
  .widget-title
    padding-left 10px
    font-weight bold
    padding 20px 10px
    margin 0
  .box-widget-header
    padding 10px
    border-bottom 1px solid #ddd
    font-size 22px
    background-color transparent
    color #746857
  .box-widget-container
    padding 5px
    h3>a, h2>a
      font-size 14px
      color catext
      font-weight 300
      &:hover
        color cagreen
    h2
      font-size 18px
      color #6a5c5d

