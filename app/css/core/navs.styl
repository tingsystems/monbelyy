//SEARCH BAR

.search-bar {
  height: auto;
  width: auto;
  position: absolute;
  display: inline-block;
  top: 50%;
  margin-left -55px
  transform: translate(0%, -50%);
  box-sizing: border-box;
  background-color transparent
  z-index 9
}
.search-bar input {
  height: 44px;
  width: 44px;
  padding: 10px 20px;
  box-sizing: border-box;
  font-size: 18px;
  border: 2px solid transparent;
  border-radius: 44px;
  cursor: pointer;
  background-color: transparent;
  -webkit-transition: width 0.4s ease-in-out;
  transition: width 0.4s ease-in-out;
  color: white;
}
.search-bar input::-moz-placeholder {
  color: transparent;
  background-color: #FFF;
}
.search-bar input:-ms-input-placeholder {
  color: transparent;
  background-color: #FFF;
}
.search-bar input::placeholder {
  color: transparent;
  background-color: #FFF;
}
.search-bar input:invalid {
  box-shadow: none;
}
.search-bar input:focus, .search-bar input:valid {
  width: 300px;
  border: 2px solid #000;
  outline: none;
  cursor: auto;
  background-color: #FFF;
  color: #000;
}
.search-bar input:focus::-moz-placeholder, .search-bar input:valid::-moz-placeholder {
  color: #999;
  background-color: #FFF;
}
.search-bar input:focus:-ms-input-placeholder, .search-bar input:valid:-ms-input-placeholder {
  color: #999;
  background-color: #FFF;
}
.search-bar input:focus::placeholder, .search-bar input:valid::placeholder {
  color: #999;
  background-color: #FFF;
}
.search-bar input:focus + .search-icon, .search-bar input:valid + .search-icon {
  z-index: 0;
  border-color: #000;
  right: 20px;
  background-color: #FFF;
}
.search-bar input:focus + .search-icon:after, .search-bar input:valid + .search-icon:after {
  background-color: #000;
}

.search-icon {
  display: inline-block;
  height: 20px;
  width: 20px;
  border-radius: 50%;
  border: 2px solid black;
  position: absolute;
  right: 12px;
  top: 8px;
  z-index: -1;
  background-color white
}
.search-icon:after {
  content: "";
  position: absolute;
  top: 19.07px;
  left: 17.07px;
  transform: rotate(45deg);
  height: 2px;
  width: 10px;
  background-color: black;
  border-radius: 10px;
}

