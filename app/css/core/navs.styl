/*------------------------
-------- NAVS -------
-- THEME BY TINGSYSTEMS --
-------------------------*/

.header
  position initial

/* Shopping cart */
.shopping-cart
  position relative
  margin-top -5px
  i
    font-size 40px
    color shoppingCart
  .qty-cart
    position absolute
    color white
    text-align center
    border-radius 30px
    background-color qtyCartClr
    font-size 16px
    top -15px
    right 0
    font-size 13px
    width 20px
    height 20px

/* header three rows style */
.three-rows-nav
  .first-row
    padding 15px 0
    background-color transparent
    border-bottom 1px solid #ddd
    .dropdown-menu
      margin-top -10px
    .list-icons-add
      li
        i
          margin-top 5px
        &:nth-last-child(1)
          display none
    .input-group
      margin-bottom 0
      .input-group-text
        background-color white
        border-left-color white
  .second-row
    padding 15px 0 0
    .dropdown
      margin-top 10px
    .md-input-container.md-icon-right
      width 100%
      margin 10px 0 0
      padding-right 0 !important
    .logo
      height 75px
    .nav
      margin-top 10px
      > li > .shopping-cart
        padding-right 45px
  .nav-theme
    background-color mainColor
    .navbar-nav .nav-link
      color white
      font-size 16px